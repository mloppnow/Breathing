<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bme301.abdominalbreathing">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MyActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".StartExercisesActivity"
            android:label="@string/title_activity_start_exercises"
            android:parentActivityName=".MyActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bme301.abdominalbreathing.MyActivity" />
        </activity>
        <activity
            android:name=".OpenArchivesActivity"
            android:label="@string/title_activity_open_archives"
            android:parentActivityName=".MyActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bme301.abdominalbreathing.MyActivity" />
        </activity>
    </application>

</manifest>
